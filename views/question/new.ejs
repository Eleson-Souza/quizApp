<%- include('../partials/header.ejs') %>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container">
        <div class="card mt-3">
            <div class="card-header">
                <h2>Nova Pergunta</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/pergunta/nova">
                    <label for="question">Descrição da pergunta:</label>
                    <textarea name="question" id="question" class="form-control mb-3"></textarea>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">A</span>
                        </div>
                        <input type="text" name="altA" id="alt-a" class="form-control">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">B</span>
                        </div>
                        <input type="text" name="altB" id="alt-b" class="form-control">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">C</span>
                        </div>
                        <input type="text" name="altC" id="alt-c" class="form-control">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">D</span>
                        </div>
                        <input type="text" name="altD" id="alt-d" class="form-control">
                    </div>

                    <label for="alt_correta">Alternativa correta:</label>
                    <select name="alt_correta" id="alt_correta" class="form-control mb-3">
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>

                    <label for="category">Categoria da pergunta:</label>
                    <select name="category" id="category" class="form-control mb-3">
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.nome %></option>
                        <% }); %>
                    </select>

                    <button type="reset" class="btn btn-danger">Limpar</button>
                    <button type="submit" class="btn btn-success">Criar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer.ejs') %>